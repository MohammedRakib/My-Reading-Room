<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassRoomHomeActivity">

    <TextView
        android:id="@+id/ClassRoomHomeActivityTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        ></TextView>
    <Button
        android:layout_margin="5dp"
        android:id="@+id/create_or_view_created_class"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="View Created Classes"></Button>
    <Button
        android:layout_margin="5dp"
        android:id="@+id/view_joined_class"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="View Joined Classes"></Button>
</LinearLayout>